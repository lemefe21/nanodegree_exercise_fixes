<?xml version="1.0" encoding="utf-8"?>

<!--OK (1) Change the ConstraintLayout to a LinearLayout-->
<!--OK (2) Make the orientation vertical-->
<!--OK (3) Give left, right, and top padding of 16dp-->
<!--OK (4) Remove the line that declares the id, we don't need it-->
<!--OK (5) Remove the xmlns:app declaration, we don't need that anymore-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--OK (6) Delete this TextView-->

    <!--OK (7) Add an EditText-->
    <!--OK (8) Give the EditText an id of @+id/et_search_box-->
    <!--OK (9) Set the text size to 22sp-->
    <!--OK (10) Set the width to match_parent and the height to wrap_content-->
    <!--OK (11) Provide a hint telling the user to enter a query and then click search-->

    <EditText
        android:id="@+id/et_search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:hint="Enter a query and then click search"/>

    <!--OK (12) Add a TextView-->
    <!--OK (13) Give the TextView an id of @+id/tv_url_display-->
    <!--OK (14) Set the text size to 22sp-->
    <!--OK (15) Set the width to wrap_content and the height to wrap_content-->
    <!--OK (16) Give the TextView a top margin of 8dp-->
    <!--OK (17) Set the text to tell the user their search URL will show up here when they click search-->

    <TextView
        android:id="@+id/tv_url_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        android:text="Your search will show here!"/>

    <!--OK (18) Add a ScrollView-->
    <!--OK (19) Set the width to match_parent and the height to wrap_content-->
    <!--OK (20) Set the top margin to 16dp-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--OK (21) Within the ScrollView, add a TextView-->
        <!--OK (22) Give the TextView an id of @+id/tv_github_search_results_json-->
        <!--OK (23) Set the text size to 18sp-->
        <!--OK (24) Set the height and width to wrap_content-->
        <!--OK (25) Set the text to something that tells the user to make a search-->

        <TextView
            android:id="@+id/tv_github_search_results_json"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Please, make a search..."/>

    </ScrollView>

</LinearLayout>
